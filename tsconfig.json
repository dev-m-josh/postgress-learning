{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "rootDir": "./src",
        // "moduleResolution": "node10",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        /* Type Checking */
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": ["src/**/*", "__tests__"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
